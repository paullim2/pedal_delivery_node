<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

        <h2>Overview of Orders</h2>
        <table border="1" cellpadding="5">
    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        
        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr>
            <td>{{this.order_id}}</td>
            <td>{{this.customer_id}}</td>
            <td>{{this.restaurant_id}}</td>
            <td>{{this.courier_id}}</td>
            <td>{{this.order_date}}</td>    
            <td>{{this.total_amount}}</td>
            <td>{{this.courier_fee}}</td>
            <td>{{this.delivery_status}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

<script src="./js/delete_orders.js"></script>


<h2>Add Order</h2>

<form id="add-orders-form-ajax">
    
    <label for="input-customer_id">Customer: </label>
    <select name="input-customer_id" id="input-customer_id">
           <option value="">Select a customer</option>
        {{#each data}}
        <option value="{{this.customer_id}}">{{this.customer_id}}</option>
        {{/each}}
    </select>

    <label for="input-restaurant_id">Restaurant: </label>
    <select name="input-restauarnt_id" id="input-restaurant_id">
           <option value="">Select a restaurant</option>
        {{#each data}}
        <option value="{{this.restaurant_id}}">{{this.restaurant_id}}</option>
        {{/each}}
    </select>

    <label for="input-courier_id">Courier: </label>
    <select name="input-couirer_id" id="input-courier_id">
           <option value="">Select a courier</option>
        {{#each data}}
        <option value="{{this.courier_id}}">{{this.courier_id}}</option>
        {{/each}}
    </select>
    
    <label for="input-order_date">Order Date: </label>
    <input type="datetime-local" name="input-order_date" id="input-order_date">

    <label for="input-total_amount">Total Amount: </label>
    <input type="number" name="input-total_amount" id="input-total_amount">

    <label for="input-courier_fee">Courier Fee: </label>
    <input type="number" name="input-courier_fee" id="input-courier_fee">

    <label for="input-delivery_status">Delivery Status: </label>
    <input type="text" name="input-delivery_status" id="input-delivery_status">
    
     <input type="submit">
</form>

{{!-- Embed our javascript to handle the DOM manipulation and AJAX request --}}
<script src="./js/add_orders.js"></script>