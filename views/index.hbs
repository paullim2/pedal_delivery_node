<!-- index.hbs -->
<h1>The server is running!</h1>
<p>If you see this text, the server is <strong>definitely</strong> working!</p>

{{!-- Create a table --}}
<table id="orderdetails-table">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>

            <th>
                Order Details ID
            </th>

            <th>
                Order ID
            </th>

            <th>
                Food
            </th>

            <th>
                Order Quantity
            </th>

            <th>
                Unit Price
            </th>

            <th>
                Line Total
            </th>

            <th>
                Unit Courier Fee
            </th>

            <th>
                Line Fee Total
            </th>

        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr>
            <td>{{this.orderdetails_id}}</td>
            <td>{{this.order_id}}</td>
            <td>{{this.food_id}}</td>
            <td>{{this.order_qty}}</td>
            <td>{{this.unit_price}}</td>
            <td>{{this.line_total}}</td>
            <td>{{this.unit_courier_fee}}</td>
            <td>{{this.line_fee_total}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

<!-- /views/index.hbs -->

{{!-- Form to add a record to the table  --}}
<h2>Adding Data with AJAX</h2>
<p>To add a new OrderDetail, please enter the information below and click 'Submit'!</p>
<form id="add-orderdetails-form-ajax">
    <label for="input-order_id">Order ID: </label>
    <input type="number" name="input-order_id" id="input-order_id">

    {{!<label for="input-food_id">Food ID: </label>
    <input type="number" name="input-food_id" id="input-food_id">}}

    <label for="input-food_id">Food:</label>
    <select name="input-food_id" id="input-food_id">
        <option value="">Select Food</option>
        {{#each foods}}
        <option value="{{this.food_id}}">{{this.food_name}}</option>
        {{/each}}
    </select>

    <label for="input-order_qty">Order Qty: </label>
    <input type="number" name="input-order_qty" id="input-order_qty">

    <label for="input-unit_price">Unit Price: </label>
    <input type="number" name="input-unit_price" id="input-unit_price">

    <label for="input-line_total">Line Total: </label>
    <input type="number" name="input-line_total" id="input-line_total">

    <label for="input-unit_courier_fee">Unit Courier Fee: </label>
    <input type="number" name="input-unit_courier_fee" id="input-unit_courier_fee">

    <label for="input-line_fee_total">Line Fee Total: </label>
    <input type="number" name="input-line_fee_total" id="input-line_fee_total">

    <input type="submit">
</form>

{{!-- Embed our javascript to handle the DOM manipulation and AJAX request --}}
<script src="./js/add_orderdetails.js"></script>
